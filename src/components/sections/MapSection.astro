---
import Icon from "../ui/icons/Icon.astro";

// Define the variables that will be used in this component
const { title, content, firstNumber, secondNumber, mapsrc } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title?: string;
  content?: string;
  firstNumber?: string;
  secondNumber?: string;
  mapsrc?: any;
}
---

<section class="w-full">
  <div class="mb-4 flex w-full items-center justify-center">
    <div class="flex px-3">
      <div class="flex-shrink-0">
        <div
          class="flex h-12 w-12 items-center justify-center rounded-full bg-orange-500 text-white"
        >
          <!-- Heroicon name: phone -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-6 w-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
            ></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <span
          class="text-lg font-extrabold leading-6 text-gray-900 dark:text-neutral-200"
        >
          Número de Contacto
        </span>
        <br />
        <span
          class="mt-2 text-base font-bold text-gray-500 dark:text-neutral-200"
          >{firstNumber}</span
        >
      </div>
    </div>
    <div class="flex px-3">
      <div class="flex-shrink-0">
        <div
          class="flex h-12 w-12 items-center justify-center rounded-full bg-green-500 text-white"
        >
          <!-- Heroicon name: phone -->
          <Icon name="whatsapp" />
        </div>
      </div>
      <div class="ml-4">
        <span
          class="text-lg font-extrabold leading-6 text-gray-900 dark:text-neutral-200"
        >
          Número de WhatsApp
        </span>
        <br />
        <span
          class="mt-2 text-base font-bold text-gray-500 dark:text-neutral-200"
          >{firstNumber}</span
        >
      </div>
    </div>
  </div>

  <div
    class="mb-4 overflow-hidden rounded-xl border-4 border-neutral-300 dark:border-neutral-700"
  >
    <iframe
      class="grayscale transition-all duration-300 hover:grayscale-0"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3902.3672668475183!2d-77.00791708905597!3d-12.018217488167144!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c5f4a3114763%3A0x6134ff058435fa87!2sOslop%20Telcom!5e0!3m2!1ses-419!2spe!4v1716150203706!5m2!1ses-419!2spe"
      width="100%"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
</section>
